{
    "compilerOptions": {
      "outDir": "./dist",
      "allowJs": true,
      "target": "ES2017",
      "module": "ES2022",
      "moduleResolution": "Node",
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "strict": true,
      "noUnusedLocals": true
    },
    "include": ["./src/**/*"]
  }